@model StoreApp.WebApp.Models.AddProductsModel

@{
    ViewData["Title"] = "Product";
    var names = (List<string>)ViewData["ProductNames"];
}

<h1>Product</h1>

<h4>AddProductsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Product">

            <select asp-for="Names" asp-items="Model.Names"></select>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Orders" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

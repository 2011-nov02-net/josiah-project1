@model StoreApp.WebApp.Models.LocationViewModel

@{
    ViewData["Title"] = "Orders";
    var orders = (List<OrderViewModel>)ViewData["Orders"];
}

<h1>Orders</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <ul>
        @foreach (var order in orders)
        {
        <li>
            @order.Customer.FirstName @order.Customer.LastName @order.Time
            @foreach (var item in order.Items)
            {
                @: || 
                @:Product:
                @(item.Key.Name)
                @:  -  Quantity:
                @(item.Value)
            }
              ||  Total: 
            @string.Format("{0:C0}", order.Price)
        </li>
        }
    </ul>

</div>
<div>
    <a asp-action="Index">Back to Locations</a>
</div>
